{
  "singleQuote": true,
  "useTabs": true,
  "jsxSingleQuote": true,
  "semi": false,
  "tabWidth": 2,
  "trailingComma": "none",
  "arrowParens": "avoid",
  "bracketSpacing": false,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/components/(.*)$",
    "^@/hooks/(.*)$",
    "^@/shared/(.*)$",
    "^@/services/(.*)$",
    "^@/assets/(.*)$",
    "^@/utils/(.*)$",
    "^@/config/(.*)$",
    "^@/providers/(.*)$",
    "^../(.*)",
    "^./(.*)"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}

